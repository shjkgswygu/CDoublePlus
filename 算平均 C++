#include <iostream>
using namespace std;

int main()
{
  const int NUMBER_OF_ELEMENTS = 5;
  double numbers[NUMBER_OF_ELEMENTS];
  double numbers_square[NUMBER_OF_ELEMENTS];
  double sum = 0;

  for (int i = 0; i < NUMBER_OF_ELEMENTS; i++)
  {
    cout << "輸入一個數: ";
    cin >> numbers[i];
    sum += numbers[i];
    numbers_square[i]=numbers[i]*numbers[i];
  }
  cout<<"第一個的數= "<< numbers[0] << endl;
  cout<<"第一個數的平方= "<< numbers_square[0] << endl;
  
  double average = sum / NUMBER_OF_ELEMENTS;

 /* int count = 0; // The number of elements above average
  for (int i = 0; i < NUMBER_OF_ELEMENTS; i++)
    if (numbers[i] > average)
      count++;*/ 

  cout << "平均= " << average << endl;
  cout << "你們曾龍老大給我們學子小采的作業 " << endl; 
  //cout << "超過平均值的有 " << count << endl; 
  system("pause"); 
  return 0;
}
